<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8fafc"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Карточка с основной информацией -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/order_card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Редактирование заказа"
                android:textColor="#334155"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Имя клиента -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя клиента *"
                android:textColor="#64748b"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/customerNameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите имя клиента"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Телефон -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Телефон *"
                android:textColor="#64748b"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/customerPhoneEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите телефон"
                android:inputType="phone"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Адрес -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Адрес доставки"
                android:textColor="#64748b"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/customerAddressEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите адрес доставки"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:minLines="2" />

            <!-- Сумма -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сумма заказа *"
                android:textColor="#64748b"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/orderAmountEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите сумму"
                android:inputType="numberDecimal"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Статус -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Статус заказа"
                android:textColor="#64748b"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/statusSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

        <!-- Карточка с составом заказа -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/order_card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Состав заказа"
                android:textColor="#334155"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/orderItemsEdit"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Введите состав заказа (каждый товар с новой строки)"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:gravity="top"
                android:minLines="4" />

        </LinearLayout>

        <!-- Карточка с датой доставки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/order_card_background"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата доставки"
                android:textColor="#334155"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/deliveryDateEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите дату доставки (ГГГГ-ММ-ДД)"
                android:background="@drawable/edittext_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Отмена"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#64748b" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Сохранить"
                android:layout_marginStart="8dp"
                android:backgroundTint="#4f46e5" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>