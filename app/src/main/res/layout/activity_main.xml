<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/purple_500"
            android:padding="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OrderManager"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Присоединяйтесь к нашей платформе"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <!-- Табы -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gray_light"
            android:padding="5dp"
            android:layout_margin="25dp"
            android:id="@+id/tabLayout">

            <TextView
                android:id="@+id/loginTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Вход"
                android:textAlignment="center"
                android:padding="12dp"
                android:background="@drawable/tab_background"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/registerTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Регистрация"
                android:textAlignment="center"
                android:padding="12dp"
                android:background="@drawable/tab_background_selected"
                android:textColor="@color/purple_500" />
        </LinearLayout>

        <!-- Форма регистрации -->
        <LinearLayout
            android:id="@+id/registerForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <EditText
                android:id="@+id/regName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Имя и фамилия"
                android:drawableEnd="@drawable/ic_person" />

            <EditText
                android:id="@+id/regEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawableEnd="@drawable/ic_email" />

            <EditText
                android:id="@+id/regPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_lock" />

            <EditText
                android:id="@+id/regConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Подтверждение пароля"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_lock" />

            <CheckBox
                android:id="@+id/termsCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Я принимаю условия использования" />

            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Создать аккаунт"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <!-- Форма входа (изначально скрыта) -->
        <LinearLayout
            android:id="@+id/loginForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/loginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawableEnd="@drawable/ic_email" />

            <EditText
                android:id="@+id/loginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_lock" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Войти"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>