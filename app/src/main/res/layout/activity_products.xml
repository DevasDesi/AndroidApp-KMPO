<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8fafc">

    <!-- Шапка -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4f46e5"
        android:padding="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OrderManager"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#7c3aed"
            android:src="@android:drawable/ic_menu_mylocation"
            android:tint="#ffffff"
            android:scaleType="center"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Панель уведомлений -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f1f5f9"
        android:padding="20dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Панель управления товарами"
            android:textColor="#334155"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableStart="@android:drawable/ic_menu_manage"
            android:drawablePadding="8dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <!-- Критический остаток -->
            <LinearLayout
                android:id="@+id/criticalStockBadge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/badge_background_critical"
                android:padding="14dp"
                android:layout_margin="6dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/criticalStockCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#334155"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Критический остаток"
                    android:textColor="#64748b"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:maxLines="2" />

            </LinearLayout>

            <!-- Низкий остаток -->
            <LinearLayout
                android:id="@+id/lowStockBadge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/badge_background_warning"
                android:padding="14dp"
                android:layout_margin="6dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/lowStockCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#334155"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Низкий остаток"
                    android:textColor="#64748b"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:maxLines="2" />

            </LinearLayout>

            <!-- Всего товаров -->
            <LinearLayout
                android:id="@+id/totalProductsBadge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/badge_background_info"
                android:padding="14dp"
                android:layout_margin="6dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/totalProductsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#334155"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Всего товаров"
                    android:textColor="#64748b"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:maxLines="2" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Табы для фильтрации товаров -->
    <LinearLayout
        android:id="@+id/productsTabsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="4">

        <TextView
            android:id="@+id/tabAllProducts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Все"
            android:textAlignment="center"
            android:padding="16dp"
            android:background="@drawable/tab_background_selected"
            android:textColor="#4f46e5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tabCriticalStock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Критические"
            android:textAlignment="center"
            android:padding="16dp"
            android:background="@drawable/tab_background"
            android:textColor="#94a3b8" />

        <TextView
            android:id="@+id/tabLowStock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Низкие"
            android:textAlignment="center"
            android:padding="16dp"
            android:background="@drawable/tab_background"
            android:textColor="#94a3b8" />

        <TextView
            android:id="@+id/tabByCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="По категориям"
            android:textAlignment="center"
            android:padding="16dp"
            android:background="@drawable/tab_background"
            android:textColor="#94a3b8" />

    </LinearLayout>

    <!-- Контент товаров -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Заголовок и кнопка добавления -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/productsSectionTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Все товары"
                    android:textColor="#334155"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/addProductButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Добавить"
                    android:background="@drawable/button_background"
                    android:textColor="#ffffff"
                    android:padding="12dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Сообщение о пустом списке -->
            <LinearLayout
                android:id="@+id/emptyProductsLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/empty_state_background"
                android:visibility="visible">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:tint="#94a3b8"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Товары не найдены"
                    android:textColor="#64748b"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Нажмите 'Добавить' чтобы создать первый товар"
                    android:textColor="#94a3b8"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Контейнер для товаров -->
            <LinearLayout
                android:id="@+id/productsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Здесь будут динамически добавляться карточки товаров -->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Нижняя навигация -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="5"
        android:paddingVertical="16dp"
        android:paddingHorizontal="8dp">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_always_landscape_portrait"
                android:tint="#94a3b8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:textColor="#94a3b8"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navOrders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_add"
                android:tint="#94a3b8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заказы"
                android:textColor="#94a3b8"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProducts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:tint="#4f46e5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Товары"
                android:textColor="#4f46e5"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navAnalytics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_manage"
                android:tint="#94a3b8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Аналитика"
                android:textColor="#94a3b8"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_preferences"
                android:tint="#94a3b8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Настройки"
                android:textColor="#94a3b8"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>