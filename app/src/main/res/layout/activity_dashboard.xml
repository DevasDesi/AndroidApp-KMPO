<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8fafc">

    <!-- Шапка -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4f46e5"
        android:padding="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OrderManager"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#7c3aed"
            android:src="@android:drawable/ic_menu_mylocation"
        app:tint="#ffffff"
        android:scaleType="center"
        android:padding="8dp" />

    </LinearLayout>

    <!-- Панель кризисного менеджера -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f1f5f9"
        android:padding="20dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Панель кризисного менеджера"
            android:textColor="#334155"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableStart="@android:drawable/ic_dialog_alert"
        android:drawablePadding="8dp"
        android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <!-- Просроченные заказы -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/badge_background_critical"
                android:padding="14dp"
                android:layout_margin="6dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/overdueOrdersCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#334155"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Просроченные заказы"
                    android:textColor="#64748b"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:maxLines="2" />

            </LinearLayout>

            <!-- Критический остаток -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/badge_background_warning"
                android:padding="14dp"
                android:layout_margin="6dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/criticalStockCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#334155"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Критический остаток"
                    android:textColor="#64748b"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:maxLines="2" />

            </LinearLayout>

            <!-- Ожидают обработки -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/badge_background_info"
                android:padding="14dp"
                android:layout_margin="6dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/pendingOrdersCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#334155"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ожидают обработки"
                    android:textColor="#64748b"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:maxLines="2" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Табы -->
    <LinearLayout
        android:id="@+id/tabsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="3">

        <TextView
            android:id="@+id/tabOrders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Заказы"
            android:textAlignment="center"
            android:padding="16dp"
            android:background="@drawable/tab_background_selected"
            android:textColor="#4f46e5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tabProducts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Товары"
            android:textAlignment="center"
            android:padding="16dp"
            android:background="@drawable/tab_background"
            android:textColor="#94a3b8" />

        <TextView
            android:id="@+id/tabAnalytics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Аналитика"
            android:textAlignment="center"
            android:padding="16dp"
            android:background="@drawable/tab_background"
            android:textColor="#94a3b8" />

    </LinearLayout>

    <!-- Контент -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Заголовок раздела -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Последние заказы"
                    android:textColor="#334155"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewAllButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Все"
                    android:textColor="#4f46e5"
                    android:textSize="14sp"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Сообщение о пустом списке -->
            <LinearLayout
                android:id="@+id/emptyOrdersLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/empty_state_background"
                android:visibility="visible">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_report_image"
                app:tint="#94a3b8"
                android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Нет заказов"
                    android:textColor="#64748b"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Здесь будут отображаться ваши заказы"
                    android:textColor="#94a3b8"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Контейнер для будущих заказов (скрыт) -->
            <LinearLayout
                android:id="@+id/ordersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Здесь будут динамически добавляться карточки заказов -->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Нижняя навигация -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="5"
        android:paddingVertical="16dp"
        android:paddingHorizontal="8dp">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_always_landscape_portrait"
            app:tint="#4f46e5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:textColor="#4f46e5"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navOrders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_add"
            app:tint="#94a3b8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заказы"
                android:textColor="#94a3b8"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProducts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_agenda"
            app:tint="#94a3b8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Товары"
                android:textColor="#94a3b8"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navAnalytics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_manage"
            app:tint="#94a3b8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Аналитика"
                android:textColor="#94a3b8"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_preferences"
            app:tint="#94a3b8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Настройки"
                android:textColor="#94a3b8"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>